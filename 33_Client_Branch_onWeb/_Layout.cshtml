                    <li>@Html.ActionLink("Все филиалы", "List_Branches", "Brunches", null,  new { @class="allbr" })</li>
                    <li>@Html.ActionLink("Добавить клиента в БД", "Add_Client", "Home", null, new { @class = "addcl" })</li>
                    <li>@Html.ActionLink("Добавить филиал в БД", "add", "story", null, new { @class = "addcl" })</li>
                    <li>@Html.ActionLink("Удалить клиента с БД", "add", "story", null, new { @class = "addcl" })</li>
                    <li>@Html.ActionLink("Удалить филиал с БД", "add", "story", null, new { @class = "addcl" })</li>
                    @*<li>@Html.ActionLink("О проекте", "about", "about", new { area = "" }, null)</li>*@
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="text-align:center;font-weight:bold">&copy; @DateTime.Now.Year - CLIENTS AND BRANCHES</p>
        </footer>
    </div>

