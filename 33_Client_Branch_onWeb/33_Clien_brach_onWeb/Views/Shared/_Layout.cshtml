                        <li> @Html.ActionLink("List of a Branches", "List_Branch", "Branches", new { area = "" }, new { @style = "color:darkblue;font-weight:bold" })</li>
                        <li> @Html.ActionLink("List of a Banks", "List_Banks", "Banks", new { area = "" }, new { @style = "color:darkblue;font-weight:bold" })</li>
                        <li> @Html.ActionLink("About", "about", "about", new { area = "" }, new { @style = "color:darkblue;font-weight:bold" })</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="text-align:center;font-weight:bold">&copy; @DateTime.Now.Year - CLIENTS AND BRANCHES</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

