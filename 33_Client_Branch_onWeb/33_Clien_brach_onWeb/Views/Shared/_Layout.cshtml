                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Смотреть всеклиенты и филиалы", "Index", "page", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="top">
                <div class="navbar-collapse collapse">
                    <ul id="ul1" class="nav navbar-nav">
                        <li> @Html.ActionLink("Clients", "Clients", "Pagination", new { area = "" }, new { @style = "color:darkblue;font-weight:bold" })</li>
                        <li> @Html.ActionLink("Branches", "Branches", "Pagination", new { area = "" }, new { @style = "color:darkblue;font-weight:bold" })</li>
                        <li> @Html.ActionLink("Banks", "Banks", "Pagination", new { area = "" }, new { @style = "color:darkblue;font-weight:bold" })</li>
